<div class='card'>
  <div class='card-block'>
    <%= form_for(pin, html: { multipart: true }) do |f| %>
    <% if pin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

        <ul>
        <% pin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

	 <div class="form-group row"> 
	  <%= f.label :title, class: 'col-sm-2 form-control-label' %>
	  <div class='col-sm-7'>	 
	     <%= f.text_field :title, class: 'form-control' %>
	   </div>
	 </div>

	 <div class="form-group row">
	   <%= f.label :description, class: 'col-sm-2 form-control-label' %>
	   <div class='col-sm-7'>
	     <%= f.text_area :description, class: 'form-control' %>		   
	   </div>
	 </div>
	 	 
	 <div class='form-group row'>
		 &nbsp;&nbsp;
		<label class='col-sm-offset-2 file'>
		  <%= f.file_field :image %>	
		  <span class="file-custom"></span>
		</label>			 
	 </div>
  
	 <div class="form-group row">
	   <div class="col-sm-offset-2 col-sm-10">
	     <%= f.submit 'Submit', class: 'btn btn-primary' %>
	     <%= link_to 'Back', pins_path, class: 'btn btn-secondary' %>		  
	   </div>
	 </div>
  
    <% end %>
  </div>
</div>